{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
  },
  "exclude": [
    "webpack.config",
    "node_modules",
    "ckfinder",
    "comps/ckeditor",
    "webpack.config.js"
  ],
  "typeRoots": [
    "./types"
  ]
}